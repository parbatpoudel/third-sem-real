<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Formula_all_subject">

    <Button
        android:id="@+id/formula_business_finance"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/finance"/>
    <TextView
        android:id="@+id/tt1"
        android:layout_marginTop="7dp"
        android:layout_below="@+id/formula_business_finance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="             Finance"
        android:textSize="35sp"
        android:textColor="#000000"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/formula_statistics"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/tt1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/statistics"/>

    <TextView
        android:id="@+id/tt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/formula_statistics"
        android:layout_marginTop="3dp"
        android:text="              Statistics"
        android:textColor="#000000"
        android:textSize="35sp"
        android:textStyle="bold" />




</RelativeLayout>
